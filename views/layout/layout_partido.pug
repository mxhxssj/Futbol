.row.proximos-partidos
    each partido in partidos
        .col-md-6.col-lg-4.mb-4
            .card
                img.card-img-top(src=`/img/partidos_${partido.imagen}.jpg`)
                .card-body
                    h2 Real Madrid vs #{partido.rival}

                    p
                        svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                            path(d='M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z')
                            path(d='M16 3v4')
                            path(d='M8 3v4')
                            path(d='M4 11h16')

                        | #{moment(partido.fecha).format('DD/MM/YYYY')} - #{partido.hora}

                    p
                        svg(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' width='24' height='24' stroke-width='2')
                            path(d='M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0')
                            path(d='M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0')

                        | Estadio: #{partido.estadio}

                    p= partido.descripcion.substring(0, 100) + '...'

                    a(
                        href=`/partidos/${partido.slug}`,
                        class="btn btn-success btn-block"
                    ) Ver Partido
